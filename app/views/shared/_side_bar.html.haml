.side_bar
  .side-header
    .side-header__box
      .user-name
        = current_user.name
      .box__menu
        .new-group
          = link_to new_group_path do
            = icon('fas', 'pen-square',class: 'icon')
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog',class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            まだメッセージはありません
